<% if @records.blank? %>
  <p>There are not any books currently in the system.</p>
<% else %>
  <p>These are the current books in our system</p>

  <ul id = "books">
       <% @records.each do |c| %>
            <li><%= link_to c.created_at, {:action => 'show', :id => c.id} -%></li>
               <% end %>
  </ul>

<% end %>
<p><%= link_to "Add new Record", {:action => 'new' }%></p>
